{
    "name": "ubirak/event-store",
    "description": "Different event store implementations",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Ubirak team",
            "email": "team@ubirak.org"
        }
    ],
    "autoload": {
        "psr-4": { "Ubirak\\Component\\EventStore\\": "" },
        "exclude-from-classmap": ["/Tests/"]
    },
    "autoload-dev": {
        "psr-4": {
            "Ubirak\\Component\\EventStore\\Tests\\": "Tests"
        }
    },
    "minimum-stability": "dev",
    "require": {
        "php": "^7.1.3",
        "php-http/httplug": "^1.1",
        "guzzlehttp/psr7": "^1.2",
        "symfony/serializer": "^2.8|^3.4|^4.0",
        "jakeasmith/http_build_url": "^1.0.1"
    },
    "require-dev": {
        "atoum/atoum": "^3.1",
        "php-http/mock-client": "^1.0.1"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        }
    },
    "scripts": {
        "deploy": "",
        "test": "atoum -force-terminal -ulr"
    }
}
